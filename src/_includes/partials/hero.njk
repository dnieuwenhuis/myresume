<section class="hero">
    <div class="container">
        <div class="hero__content">
            <h1>{{ title }}</h1>
            {% if tags %}
            <ul class="tags">
                {% for item in tags %}
                <li class="badge badge-dark">{{ item }}</li>
                {% endfor %}
            </ul>
            {% endif %}
        </div>
        {% if banner %}
        <figure class="hero__media">
            <img src="{{ banner }}" alt="{{ title }}" />
        </figure>
        {% endif %}
    </div>
</section>